.modal-wrap {
  position: fixed;
  opacity: 0;
  z-index: 10000;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 0.3s;
}
.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}
.modal-content {
  border-radius: 2rpx;
  width: 550rpx;
  min-height: 240rpx;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.close-icon {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 36rpx;
  height: 36rpx;
}
.close-icon .img {
  width: 100%;
  height: 100%;
}
