.search-input-box{
    margin-top: 0px;
    margin-left: 0px;
    height: 50px;
    line-height: 50px;
    width: 320px;
    background-color: rgb(248, 248, 248);
    border-radius: 0px;
    display: flex;
    align-items: center;
    max-width: 100%;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    border-color: #222222;
    border-width: 0;
    position: relative;
    padding: 0 10px;
}
.search-input{
  border-radius: 5px;
    background-color: rgb(255, 255, 255);
    opacity: 1;
    color: rgb(153, 153, 153);
    font-size: 12px;
    padding-left: 20px;
    width: 280px;
    height: 30px;
    margin: 0 auto;
    overflow: hidden;
    line-height: 50px;
    position: relative;
}
.search-input-span {
    display: inline-block;
    max-width: 230px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    vertical-align: top;
}
.search-btn {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 100%;
    color: #313131;
    background-color: #d5d6db;
}

.integral-platform {
  height: 45px;
