  background: #f2f2f2;
  border-radius: 5px;
  padding: 10px;
}
 .userInfoTitle {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.userInfo, .videoInfo {
  display: flex;
  align-items: center;
}

