}

.fixed-bottom-box{
  padding: 10px;
  position: fixed;
  background: #fff;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}
.fixed-bottom-kind1{
  width:40px;
  text-align: center;
  float: left;
}
.fixed-bottom-kind1 image{
  width: 16px;
  height: 16px;
}
.fixed-bottom-kind1-text{
  font-size: 12px;
}
.fixed-bottom-btn{
  background: #f2f2f2;
  border-radius: 15px;
  color:#f2f2f2;
  text-align: center;
  padding: 0 10px;
  height: 32px;
  margin-right: 10px;
  float: left;
  font-size:11px;
}
.fixed-bottom-btn.bottom-btn1{
  line-height: 32px;
}
.fixed-bottom-btn.bgcolor1{
  background: #3399ff;
}
.fixed-bottom-btn.bgcolor2{
  background: #ff9966;
}
.fixed-bottom-btn.bgcolor3{
  background: #99cc33;
}
.fixed-bottom-btn-text{
  height: 16px;
  line-height: 16px;

