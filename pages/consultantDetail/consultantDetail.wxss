/* pages/consultantDetail/consultantDetail.wxss */
.detail-head-box{
  padding:10px;
}
.first-mode-head {
    display: flex;
    margin-bottom: 5px;
}
.user-head-img {
    height: 32px;
    width: 32px;
    border-radius: 100%;
    margin-right: 8px;
}
.user-head-img image {
    width: 100%;
    height: 100%;
}
.user-header-font {
    color: #333;
    margin-top:6px;
}
.user-header-time {
    color: #999;
    font-size: 10px;
}
.topic-height-con, .topic-height-line {
    line-height: 20px;
    color: #333;
}
.topic-height-con{
  line-height: 30px;
  font-size: 14px;
}
.topic-height-line {
    font-weight: 600;
}
.topic-height-line {
    line-height: 20px;
    color: #f00;
    display: inline-block;
}
.topic-height-name{
  font-size: 12px;
  color: #333;
  margin-right:20px;
  display: inline-block;
}
.topic-image-box{
  display: inline-block;
}
.topic-image{
  width:10px;
  height: 10px;
  margin-right:2px;
}
.topic-tag-box{
  line-height: 30px;
  color:#333;
}
.topic-tag{
  display: inline-block;
  margin-right: 10px;
  font-size: 12px;
  color:#333;
}
.detail-handle-box{
  text-align: center;
  font-size: 12px;
  padding: 10px 0;
}
.detail-handle-img{
  width: 10px;
  height: 10px;
  margin-right: 4px;
}
.detail-handle-img,.detail-handle-title{
  vertical-align: middle;
  display: inline-block;
}
.second-title{
  font-size: 13px;
  color: #333;  
  line-height: 30px;
}
.second-desc{
  color: #666;
  font-size: 12px;
  line-height: 18px;
}
.second-grade-box{
  padding-left: 20px;
  margin-bottom: 15px;
}
.second-tag-box{
  display: flex;
  padding: 10px;
background: #f2f2f2;
border-radius: 4px;

}
.second-tag-title{
  width: 80px;
  font-size: 12px;
  
}
.second-tag-content{
  flex: 1;
}
.second-tag-item{
  margin-right: 10px;
  display: inline-block;
  font-size: 12px;
  color: #666;
  line-height: 20px;
  }