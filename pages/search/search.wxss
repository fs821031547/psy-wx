/* pages/search/search.wxss */
.header-box {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    z-index: 199;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    padding: 0rpx 20rpx;
margin-top: 20rpx;

}

.search-box {
    display: flex;
    align-items: center;
    height: 65rpx;
    background-color: #f5f5f5;
    border-radius: 6rpx;
    width:540rpx;
}

.search-icon {
    width: 36rpx;
    height: 36rpx;
    margin: 0 16rpx;
}
.search-input {
    width:410rpx;
    margin-left: 10rpx;
    font-size: 29.16rpx;
}

.search-confirm {
    width: 120rpx;
    height: 65rpx;
    margin-left: 20rpx;
    text-align: center;
    line-height: 65rpx;
    font-size: 28rpx;
    background-color: #ffbe28;
    color: #ffffff;
    border-radius: 8rpx;
    padding-right: 0;
    margin-right:0rpx;

}

.search-history-box{
  padding: 10px;
  margin-top:60px;
  position: relative;
}
.search-history{
  font-size: 16px;
}
.delete-btn{
  position: absolute;
  right: 10px;
  top:2px;
  
}
.delete-btn-image{
  width: 20px;
  height: 20px;

}
.search-tag-list{
  padding:0 10px;
}
.search-tag{
  background: #f2f2f2;
  text-align: center;
  padding:0 10px;
  height: 30px;
  line-height: 30px;
  color:#333;
  font-size: 13px;
  margin-right: 10px;
  display: inline-block;
}